{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",

  "Redis": {
    "ConnectionString": "" // leave empty for in-memory cache by default
  },

  "Kafka": {
    "BootstrapServers": "", // leave empty to use NoopEventPublisher by default
    "Topic": {
      "TradeRecorded": "trades.recorded"
    }
  },

  "Cache": {
    // Time-to-live for per-ticker cached trade values (seconds)
    "TradeValueTtlSeconds": 120
  }
}
